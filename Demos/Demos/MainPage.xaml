             x:Class="Demos.MainPage"
             Title="Main page">

    <StackLayout>
        <Label x:Name="lbl1" Text="Welcome to Xamarin.Forms!" 
           VerticalOptions="Center" 
           HorizontalOptions="Center" />
        <StackLayout Orientation="Horizontal" BackgroundColor="LightPink">
            <Label x:Name="lbl2" Text="Prueba" HorizontalOptions="FillAndExpand" BackgroundColor="LightGreen" />
            <Label x:Name="lbl3" Text="Prueba" BackgroundColor="#AAAAAA"/>
  
        </StackLayout>
        
        <Entry x:Name="txt1" />
        <Button x:Name="btn1" Text="Hacer algo"></Button>
